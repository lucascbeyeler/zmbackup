################################################################################
# LOADING ZMBACKUP LIBRARIES
################################################################################
source /usr/local/lib/zmbackup/bash/HelpAction.sh
source /usr/local/lib/zmbackup/bash/MiscAction.sh
source /usr/local/lib/zmbackup/bash/NotifyAction.sh
source /usr/local/lib/zmbackup/bash/ParallelAction.sh
source /usr/local/lib/zmbackup/bash/ListAction.sh
source /usr/local/lib/zmbackup/bash/BackupAction.sh
source /usr/local/lib/zmbackup/bash/RestoreAction.sh
source /usr/local/lib/zmbackup/bash/DeleteAction.sh
source /usr/local/lib/zmbackup/bash/MigrationAction.sh
source /usr/local/lib/zmbackup/bash/SessionAction.sh

################################################################################
# ZMBACKUP MAIN CODE
################################################################################
load_config
validate_config
export_function
export_vars
constant
case "$1" in
  "-f"|"--full" )
    checkpid
    case "$2" in
      "-dl"|"--distributionlist" )
        sessionvars "$2"
        create_temp
        backup_main "$DLOBJECT" "$DLFILTER" "$3" "$4"
        rm -rf "$PID"
      ;;
      "-al"|"--alias" )
        sessionvars "$2"
        create_temp
        backup_main "$ALOBJECT" "$ALFILTER" "$3" "$4"
        rm -rf "$PID"
      ;;
      "-ldp"|"--ldap" )
        sessionvars "$2"
        create_temp
        backup_main "$ACOBJECT" "$ACFILTER" "$3" "$4"
        rm -rf "$PID"
      ;;
      "-m"|"--mail" )
        sessionvars "$2"
        create_temp
        backup_main "$ACOBJECT" "$ACFILTER" "$3" "$4"
        rm -rf "$PID"
      ;;
      "-sig"|"--signature" )
        sessionvars "$2"
        create_temp
        backup_main "$SIOBJECT" "$SIFILTER" "$3" "$4"
        rm -rf "$PID"
      ;;
      * )
        sessionvars "$1"
        create_temp
        backup_main "$ACOBJECT" "$ACFILTER" "$2" "$3"
        rm -rf "$PID"
      ;;
    esac
  ;;
  "-i"|"--incremental" )
    sessionvars "$1" 'TRUE'
    checkpid
    create_temp
    backup_main "$ACOBJECT" "$ACFILTER" "$2" "$3"
    rm -rf "$PID"
  ;;
  "-l"|"--list" )
    list_sessions
  ;;
  "-r"|"--restore" )
    create_temp
    checkpid
    case "$2" in
      "-dl"|"--distributionlist"|"-ldp"|"--ldap"|"-al"|"--alias"|"-sig"|"--signature")
        case "$3" in
          "-a"|"--account"|"-d"|"--domain")
            restore_main_ldap "$4" "$5"
          ;;
          * )
            restore_main_ldap "$3" "$4"
          ;;
        esac
        rm -rf "$PID"
      ;;
      "-m"|"--mail" )
        restore_main_mailbox "$3" "$4" "$5"
        rm -rf "$PID"
      ;;
      "-ro"|"--restoreOnAccount" )
        if [ -z "$4" ] || [ -z "$5" ]; then
          show_help
          printf "\n\nError! Please inform the account that should be restored, and when the restore should be placed.\n\n"
          exit 2
        else
          constant
          restore_main_mailbox "$3" "$4" "$5"
          rm -rf "$PID"
        fi
      ;;
      * )
        if [[ "$2" == "full"* || "$2" == "inc"* ]]; then
          constant
          restore_main_ldap "$2" "$3" "$4"
          restore_main_mailbox "$2" "$3" "$4"
          rm -rf "$PID"
        else
          show_help
          printf "\n\nError! Invalid parameters for restore\n"
        fi
      ;;
    esac
  ;;
  "-d"|"--delete" )
    if [ -z "$2" ]; then
      show_help
      printf "\n\nError! Please inform the session that should be deleted\n\n"
    else
      checkpid
      delete_one "$2"
      rm -rf "$PID"
    fi
  ;;
  "-hp"|"--housekeep")
    checkpid
    delete_old
    clean_empty
    rm -rf "$PID"
  ;;
  "-t"|"--truncate")
    if [ -n "$2" ] && [ "--force-clean" == "$2" ]; then
      checkpid
      leeroy_jenkins
      clean_empty
      rm -rf "$PID"
    else
      echo "This action is irreversible - Use the option --force-clean to override this message"
    fi
  ;;
  "-h"|"--help" )
    show_help
  ;;
  "-v"|"--version" )
    echo "zmbackup version: 1.2.6"
  ;;
  "-m"|"--migrate" )
    checkpid
    migration
    rm -rf "$PID"
  ;;
  * )
    show_help
    printf "\n\nError! Incorrect options\n\n"
  ;;
esac
exit 0
